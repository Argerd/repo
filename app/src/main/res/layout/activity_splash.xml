<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_grey">

    <ImageView
        android:id="@+id/icon_logo_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/icon_logo_height"
        android:layout_marginTop="178dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_logo"
        tools:ignore="ContentDescription" />

    <ProgressBar
        android:id="@+id/splash_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:indeterminateTint="@color/turtle_green"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/icon_logo_view"
        app:layout_constraintStart_toStartOf="@+id/icon_logo_view"
        app:layout_constraintTop_toBottomOf="@+id/icon_logo_view" />

    <TextView
        android:id="@+id/splash_load_text"
        style="@style/TextStyle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/splash_activity_text"
        app:layout_constraintEnd_toEndOf="@+id/splash_progress_bar"
        app:layout_constraintStart_toStartOf="@+id/splash_progress_bar"
        app:layout_constraintTop_toBottomOf="@+id/splash_progress_bar" />

    <ImageView
        android:id="@+id/logo_mss_view"
        android:layout_width="@dimen/logo_mss_width"
        android:layout_height="@dimen/logo_mss_height"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/icon_logo_view"
        app:layout_constraintStart_toStartOf="@+id/icon_logo_view"
        app:srcCompat="@drawable/logo_mss"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>